{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2016",

    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "exactOptionalPropertyTypes": false,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
